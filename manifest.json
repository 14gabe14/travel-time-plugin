{
    "manifest_version": 3,
    "name": "Kijiji Travel Time",
    "version": "1.0",
    "description": "Calculates travel time to addresses in Kijiji ads using Google Maps.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["*://*.kijiji.ca/*"],
        "js": ["config.js", "content.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }